{% extends "BlogBundle::layout.html.twig" %}

{% block title %}
    Page d'accueil - {{ parent() }}
{% endblock %}


{% block main %}

    <div class="container">

        <div class="row">


            <div class="col-md-8">


                <!-- Article de Blog -->
                {% for post in posts %}
                <div class="card mb-4">
                    <div class="card-body">
                        <h2 class="card-title">{{ post.title }}</h2>
                        <p class="card-text">
                           {{ post.content|slice(0,200) }}[...]
                        </p>
                        <a href="{{ path('blog_view', {'id': post.id}) }}" class="btn btn-primary">Lire la suite &rarr;</a>
                    </div>
                    <div class="card-footer text-muted">
                        Post√© le {{ post.publishedAt|date("d/m/Y") }}
                        par {{ post.author.fullName }}
                    </div>
                </div>
                {% endfor %}

            </div>

    </div>

{% endblock %}